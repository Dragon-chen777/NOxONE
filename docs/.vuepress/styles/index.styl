// light模式
* {
  -webkit-tap-highlight-color: rgba(0,0,0,0)
}
body {
  cursor url('https://dragon-chen777.github.io/assets/cursors/1/default.cur'),auto
}
button, input,a:hover{
	cursor url('https://dragon-chen777.github.io/assets/cursors/1/select.cur'),auto !important
}
input:focus{
  cursor url('https://dragon-chen777.github.io/assets/cursors/1/text.cur'),auto !important
}
.page .content__default {
  // 代码：``
  code {
    word-break: break-word;
    border-radius: 2px;
    overflow-x: auto;
    background-color: #ffeeed;
    color: #c73636;
    font-size: .87em;
    padding: 0.065em 0.4em;
  }
  // 列表项索引
  li {
    &::marker {
      color: $accentColor;
    }
  }
  // 代码块：```js
  pre.language-js {
    padding: 10px;
    box-shadow:
      2.8px 2.8px 2.2px rgba(0, 0, 0, 0.02),
      6.7px 6.7px 5.3px rgba(0, 0, 0, 0.028),
      12.5px 12.5px 10px rgba(0, 0, 0, 0.035),
      22.3px 22.3px 17.9px rgba(0, 0, 0, 0.042),
      41.8px 41.8px 33.4px rgba(0, 0, 0, 0.05),
      100px 100px 80px rgba(0, 0, 0, 0.07);
    &::before {
      content: "";
      display: block;
      height: 30px;
      width: 100%;
      margin -10px 0 10px -10px
      background: url('data:image/png;base64,') 10px 10px no-repeat;
      background-size: 40px;
    }
  }
  h2 {
    font-size: 20px;
    padding-bottom: 12px;
    padding-left: 0 !important;
    border-bottom: 1px solid #dfe1e6;
    font-weight 600
    color: #00a1d6;
    &::before {
      display: none !important;
    }
  }
}
.dark .content__default {
  code {
    color: #fff;
    background-color: #34495E;
  }
}

// 标题
.page .page-title .title {
  font-size: 2rem;
  font-weight: 600;  
}
.navbar {
  .home-link{
    .logo{
      border-radius: 0;  
    }
    .site-name {
      display none
    }

  }
}
